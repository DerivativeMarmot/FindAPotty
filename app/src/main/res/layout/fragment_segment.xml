<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".segment.SegmentFragment">


    <TextView
        android:id="@+id/trends_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="TRENDS"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/diary_bt"
        tools:layout_editor_absoluteX="0dp"
        android:clickable="true"
        android:onClick="myOnClickMethod"/>

    <TextView
        android:id="@+id/contactus_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="CONTACT US"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tunes_bt"
        tools:layout_editor_absoluteX="0dp"
        android:clickable="true"
        android:onClick="myOnClickMethod"/>

    <TextView
        android:id="@+id/tunes_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="TUNES"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/reminder_bt"
        tools:layout_editor_absoluteX="0dp"
        android:clickable="true"
        android:onClick="myOnClickMethod"/>

    <TextView
        android:id="@+id/reminder_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="REMINDERS"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/trainer_bt"
        tools:layout_editor_absoluteX="0dp"
        android:clickable="true"
        android:onClick="myOnClickMethod"/>

    <TextView
        android:id="@+id/trainer_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="TRAINER"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/trends_bt"
        tools:layout_editor_absoluteX="0dp"
        android:clickable="true"
        android:onClick="myOnClickMethod"/>

    <TextView
        android:id="@+id/diary_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="DIARY"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/myPotty"
        tools:layout_editor_absoluteX="0dp"
        android:clickable="true"
        android:onClick="myOnClickMethod"/>

    <TextView
        android:id="@+id/myPotty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="My Potty"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>